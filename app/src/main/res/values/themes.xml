<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!--  Base application theme.  -->
    <style name="Theme.Meditate" parent="Theme.Meditate.NoActionBar">
        <!--  Primary brand color.  -->
        <item name="android:colorPrimary">@color/deepblue</item>
        <!--  Secondary brand color.  -->
        <item name="android:colorSecondary">@color/deepblue</item>
        <!--  Status bar color.  -->
        <item name="android:statusBarColor" >?attr/android:colorPrimary</item>
        <!--  Customize your theme here.  -->
    </style>
    <style name="Theme.Meditate.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>